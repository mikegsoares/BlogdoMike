@model BlogdoMike.Models.Post
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes</h2>

<div class="form-group">
    @Html.LabelFor(p => p.Title)
    <div>@Model.Title</div>
</div>
<div class="form-group">
    @Html.LabelFor(p => p.DateAdded) | @Html.LabelFor(p => p.DateUpdated)
    <div>@Model.DateAdded | @Model.DateUpdated</div>
</div>
<div class="form-group">
    @Html.LabelFor(p => p.PostingBody)
    <div>@Model.PostingBody</div>
</div>
